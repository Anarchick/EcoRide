<div class="d-flex justify-content-center mt-4">
    {% set totalPages = (totalEntries / 10) | round(0, 'ceil') %}
    {% if totalPages > 1 %}
        <nav aria-label="Page navigation">
            <ul class="pagination">
                {% for page in 1..totalPages %}
                    <li class="page-item {{ page == app.request.query.get('page', 1) ? 'active' : '' }}">
                        <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': page})) }}">{{ page }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    {% endif %}
</div>