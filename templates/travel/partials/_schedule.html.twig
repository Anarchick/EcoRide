{% set hours = (duration / 60)|round(0, 'floor') %}
{% set minutes = duration % 60 %}

<time class="eco-normal-text eco-bold-text" datetime="{{ date | date('Y-m-d H:i') }}">{{ date | date('H\\hi') }}</time>
<div class="separator" aria-hidden="true"></div>
<time class="eco-small-text" datetime="PT{{ duration }}M">{{ '%02dh%02d'|format(hours, minutes) }}</time>
<div class="separator" aria-hidden="true"></div>
<time class="eco-normal-text eco-bold-text" datetime="{{ arrivalDateTime | date('Y-m-d H:i') }}">{{ arrivalDateTime | date('H\\hi') }}</time>