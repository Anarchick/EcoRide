{# 
    Use the form TravelSearchType
    Different behavior according to the current page:
    - Home page: GET redirection to /travel
    - /travel page: HTMX request with target
#}
{% set current_route = app.request.get('_route') %}
{% set is_travel_page = current_route == 'app_travel_index' %}

<section class="container">
    {{ form_start(form, {
            'method': 'GET',
            'action': path('app_travel_index'), 
            'attr': {
                'id': 'travel-search-bar',
                'hx-trigger': 'change delay:500ms from:input',
            } | merge(is_travel_page ? {
                'hx-get': path('app_travel_index'),
                'hx-target': '#travel-results',
                'hx-push-url': 'true',
                'hx-indicator': '#loading'
            } : {
                'hx-get': path('app_home')
            })
    }) }}
        <div class="travel-search-inputs">
            <div class="travel-search-input">
                {{ ux_icon('ion:location-outline', {class: 'travel-search-icon'}) }}
                {{ form_widget(form.departure, {
                    'attr': {
                        'class': 'travel-search-field',
                        'placeholder': 'DÃ©part'
                    }
                }) }}
            </div>

            <div class="travel-search-input">
                {{ ux_icon('ion:location', {class: 'travel-search-icon'})}}
                {{ form_widget(form.arrival, {
                    'attr': {
                        'class': 'travel-search-field',
                        'placeholder': 'Destination'
                    }
                }) }}
            </div>
            
            <div class="travel-search-input">
                {{ ux_icon('ion:calendar', {class: 'travel-search-icon'})}}
                {{ form_widget(form.date, {
                    'attr': {
                        'class': 'travel-search-field',
                        'placeholder': 'Date'
                    }
                }) }}
            </div>
            
            <div class="travel-search-input">
                {{ ux_icon('ion:people', {class: 'travel-search-icon'})}}
                {{ form_widget(form.passengersMin, {
                    'attr': {
                        'class': 'travel-search-field',
                        'placeholder': 'Passager(s)'
                    }
                }) }}
            </div>
            
        </div>
        {{ form_errors(form) }}
    {{ form_end(form) }}
</section>
